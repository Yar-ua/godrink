<%= form_for [@event, gmap_dot] do |f| %>
  <%= render partial: 'partials/form_errors', locals: {model: gmap_dot} %>

  <div class="form-group-gmap-dots" white-space="nowrap">
    <%= f.label :coords, 'Координаты:' %>
    <%= f.text_area :coords, class: 'form-control' %>
  </div>

  <div class="form-group-gmap-dots">
    <%= f.label :title, 'Краткая метка:' %>
    <%= f.text_area :title, class: 'form-control' %>
  </div>

  <div class="form-group-gmap-dots">
    <%= f.label :html, 'Описание:' %>
    <%= f.text_area :html, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit 'Создать', class: 'btn btn-primary' %>
  </div>

<% end %>