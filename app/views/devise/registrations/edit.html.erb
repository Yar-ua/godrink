<h2>Сменить пароль для <%= @user.name %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>


  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(оставь поле пустым если не хочешь менять праоль)</i><br />
    <%= f.password_field :password, autocomplete: "off" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> знаков минимум</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(введи текущий пароль чтобы принять изменения)</i><br />
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>

  <br/>

  <div class="actions">
    <%= f.submit "Обновить пароль", class: "btn btn-primary" %>
  </div>
<% end %>

<h3>или удалить аккаунт</h3>

<p>Удалить? <%= button_to "Удалить аккаунт", registration_path(resource_name), data: { confirm: "Ты уверен?" }, method: :delete, class: "btn btn-danger" %></p>

<%= link_to "Назад", :back %>
