<!DOCTYPE html>
<html>
  <head>
    <title>GoDrinK admin</title>
    
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag "application", media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag "admins", media: 'all', 'data-turbolinks-track': 'reload' %>
    
    <%= favicon_link_tag 'favicon1.png' %>
   
  </head>

  <body>

    <%= render 'layouts/admin_header' %>


    <div class="container">
      <div class="row">
        <div class="col-lg-12">

          <% if notice != nil %>
            <p class="alert alert-success"><%= notice %></p>
          <% end %>
          <% if alert != nil %>
            <p class="alert alert-error alert-danger"><%= alert %></p>
          <% end %>


<!-- навигация для управления контентом
          <ul class="nav nav-tabs">
            <li role="presentation" class="active"><a href="#">Пользователи</a></li>
            <li role="presentation"><a href="#">Эвенты</a></li>
            <li role="presentation"><a href="#">Сообщения</a></li>
            <li role="presentation"><a href="#">Фото</a></li>
          </ul>

          -->

          <% if controller == 'admin' %>
            <h1>abobo</h1>
          <% end %>
          
          <%= yield %>

        </div>
      </div>

      <hr/>
      <%= debug(params) if Rails.env.development? %> 

    </div>




    <footer>
      <div class="navbar-fixed-bottom row-fluid">
        <div class="navbar-inner">
          <div class="container">
            <p>&copy; Developed for TKM's drinkers 2017, ver. 0.1.1</p>
          </div>
        </div>
      </div>
    </footer>
  
  </body>
</html>
