<!-- Парnиал отображения инфы об отдельном событии -->

<div class="col-sm-6 col-md-4">
  <div class="thumbnail">
    
    <%#= content_tag 'div', '', class: 'event-background', 
         style: "background-image: url('background_event1.jpg)" %>
    <div class="event-background">
      <div class="caption">

        <div class="event-description">
          <h3><%= link_to event.title, event_path(event) %></h3>
          <h3>
            <%# Для перевода времени в русский формат используем I18n %>
            <%# Формат при этом используется из гема russian %>
            <small><%= l event.datetime, format: :short %></small>
          </h3>
          <div class="buffer-both"><%= event.address %></div>
        </div>

        <div>
          <%# Выводим аватары юзеров, которые придут на событие %>
          <% event.visitors.each do |user| %>
            <%= image_tag(user_avatar_thumb(user), class: "img-circle", width: "50px", title: user.name) %>
          <% end %>
          
        </div>
      </div>
    </div>
  </div>
</div>