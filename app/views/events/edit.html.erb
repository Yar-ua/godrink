<h1>Редактирование события</h1>

<div class="row">
  <div class="col-md-6 buffer-top">
    <%= render 'form' %>

    <hr/>

    <% if current_user_can_edit?(@event) %>
      <div class="buffer-both">
        <%= link_to 'Удалить событие', event_path(@event), method: :delete, class: "btn btn-danger" %>
      </div>
    <% end %>
  
  </div>

</div>