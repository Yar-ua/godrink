<%= form_for(@event)  do |f| %>
  <%= render partial: 'partials/form_errors', locals: {model: @event} %>

  <div class="form-group">
    <%= f.label :title, "Название события" %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :address, "Адрес проведения" %>
    <%= f.text_field :address, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :datetime, "Время и дата" %>
    <%= f.datetime_select :datetime, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :description, "Суть пьянки" %>
    <%= f.text_area :description, class: 'form-control', rows: "7" %>
  </div>

  <div class="actions">
    <%= f.submit 'Сохранить', class: 'btn btn-primary' %> или <%= link_to 'вернуться', :back %>
  </div>

<% end %>