<div class="buffer-bottom">

  <div class="panel panel-default">
    <div class="panel-heading">
      <div class="panel-title">
        <span>
        <% if comment.user.present? %>
          <%= render partial: 'users/user', object: comment.user %>
        <% else %>
          <em><strong><%= comment.user.name %></strong></em>
        <% end %>
      </span>

      <em><%= l comment.created_at, format: :short %></em>
        <% if current_user_can_edit?(comment) %>
          <%= link_to fa_icon('trash'), event_comment_path(comment.event, comment),
          method: :delete, data: {confirm: 'уверен что хочешь удалить комментарий?'} %>
        <% end %>
      </div>
    </div>

    <div class="panel-body">
      <h4><%= comment.body %></h4>
    </div>
  </div>
  
</div>

